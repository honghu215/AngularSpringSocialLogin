<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fullstack.social_login.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.fullstack.social_login.model.User">
        <id column="id" property="id" jdbcType="BIGINT"></id>
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="email" property="email" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="role" property="role" jdbcType="VARCHAR" />
        <result column="imageUrl" property="imageUrl" jdbcType="VARCHAR" />
        <result column="emailVerified" property="emailVerified" jdbcType="BIT" />
        <result column="provider" property="provider" javaType="com.fullstack.social_login.model.AuthProvider" />
        <result column="providerId" property="providerId" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_list">
        id, name, email, password, role, imageUrl, provider, providerId, emailVerified
    </sql>

    <select id="getAllUsers" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM users
    </select>

    <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM users
        WHERE id = #{ id }
    </select>

    <select id="findByEmail" parameterType="java.lang.String" resultMap="BaseResultMap">
      SELECT
      <include refid="Base_Column_List" />
      FROM users
      WHERE email = #{ email }
    </select>

    <select id="existsByEmail" parameterType="java.lang.String">
        SELECT
        EXISTS( SELECT 1 FROM users WHERE email = #{ email })
    </select>

    <insert id="save" parameterType="com.fullstack.social_login.model.User">
        INSERT INTO
        users(id, name, email, role, imageUrl, emailVerified, password, provider, providerId)
        VALUES(#{id}, #{name}, #{email}, #{role}, #{imageUrl}, #{emailVerified}, #{password}, #{provider}, #{providerId})
    </insert>

</mapper>